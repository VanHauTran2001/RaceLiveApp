<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearTitle"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:layout_gravity="center"
                android:id="@+id/imgBack"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name Race"
                    android:textSize="25dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center"
                    android:id="@+id/txtNameRaceDetails"/>
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:src="@drawable/titlerace"/>
            </LinearLayout>

        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/linearTitle"
            android:layout_above="@id/relative1"
            android:layout_margin="5dp"
            android:id="@+id/recylerRaceDetails"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have car"
            android:textSize="25dp"
            android:layout_centerInParent="true"
            android:id="@+id/txtThongBaoDetails"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/relative1"
            android:gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnRunning"
                android:text="Running"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:padding="15dp"
                android:background="@drawable/custom_btn_race"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
    </RelativeLayout>
</layout>