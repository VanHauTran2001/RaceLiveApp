<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_layout">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_margin="7dp"
                android:padding="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:textSize="25dp"
                    android:textColor="@color/black"
                    android:id="@+id/txtIdCarRunning"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BMW"
                        android:textStyle="bold"
                        android:id="@+id/txtNameCarRunning"
                        android:textColor="@color/black"
                        android:textSize="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hau"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:id="@+id/txtNamePersonRunning"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start : 11:52:50"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:id="@+id/txtTimeRunning"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/txtRound"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:text="SS1"
                            android:textColor="@color/black"
                            android:textSize="25dp"
                            android:textStyle="bold" />
                        <Button
                            android:id="@+id/btnRun"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/custom_action_start"
                            android:text="Run"
                            android:textColor="@color/white"
                            android:textSize="15dp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imgDrop"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/ic_baseline_arrow_drop_up_24" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:id="@+id/tableInfo"
            android:layout_marginRight="5dp">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">
                <TableRow
                    android:background="@drawable/custom_showinfor">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Stage"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:gravity="center_horizontal"
                        android:padding="10sp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Time"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:gravity="center_horizontal"
                        android:padding="10sp"/>
                </TableRow>
                <TableRow
                    android:background="#EDEBEB">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Start"
                        android:textColor="@color/black"
                        android:padding="10sp"
                        android:textSize="15sp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/txtStart"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="12:06:12 AM"
                        android:textColor="@color/black"
                        android:padding="10sp"
                        android:textSize="15sp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:textStyle="bold"/>
                </TableRow>

                <TableRow
                    android:background="#EDEBEB">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="SS1"
                        android:textColor="@color/black"
                        android:padding="10sp"
                        android:textSize="15sp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/txtSS1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="12:06:12 AM"
                        android:textColor="@color/black"
                        android:padding="10sp"
                        android:textSize="15sp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:textStyle="bold"/>
                </TableRow>

                <TableRow
                    android:background="#EDEBEB">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="SS2"
                        android:textColor="@color/black"
                        android:padding="10sp"
                        android:textSize="15sp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/txtSS2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="12:06:12 AM"
                        android:textColor="@color/black"
                        android:padding="10sp"
                        android:textSize="15sp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:textStyle="bold"/>
                </TableRow>

                <TableRow
                    android:background="#EDEBEB">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="SS3"
                        android:textColor="@color/black"
                        android:padding="10sp"
                        android:textSize="15sp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/txtSS3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="12:06:12 AM"
                        android:textColor="@color/black"
                        android:padding="10sp"
                        android:textSize="15sp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:textStyle="bold"/>
                </TableRow>

                <TableRow
                    android:background="#EDEBEB">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="SS4"
                        android:textColor="@color/black"
                        android:padding="10sp"
                        android:textSize="15sp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/txtSS4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="12:06:12 AM"
                        android:textColor="@color/black"
                        android:padding="10sp"
                        android:textSize="15sp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:textStyle="bold"/>
                </TableRow>

                <TableRow
                    android:background="#EDEBEB">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="SS5"
                        android:textColor="@color/black"
                        android:padding="10sp"
                        android:textSize="15sp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/txtSS5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="12:06:12 AM"
                        android:textColor="@color/black"
                        android:padding="10sp"
                        android:textSize="15sp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:textStyle="bold"/>
                </TableRow>

                <TableRow
                    android:background="#EDEBEB">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="SS6"
                        android:textColor="@color/black"
                        android:padding="10sp"
                        android:textSize="15sp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/txtSS6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="12:06:12 AM"
                        android:textColor="@color/black"
                        android:padding="10sp"
                        android:textSize="15sp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:textStyle="bold"/>
                </TableRow>

                <TableRow
                    android:background="#EDEBEB">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Finish"
                        android:textColor="@color/black"
                        android:padding="10sp"
                        android:textSize="15sp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/txtStop"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="12:06:12 AM"
                        android:textColor="@color/black"
                        android:padding="10sp"
                        android:textSize="15sp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:textStyle="bold"/>
                </TableRow>
            </TableLayout>
        </RelativeLayout>
    </LinearLayout>



</layout>